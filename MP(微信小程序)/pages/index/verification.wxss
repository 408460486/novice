/* pages/index/verification.wxss */
page{
  background: cornflowerblue
}
.show{
  width: 100vw;
  height: 33vh;
  text-align: center
}
.load{
  height: 20vh;
  margin: 0 auto;
  padding-top:25rpx;
}
.block{
  width: 30px;
  height: 30px;
  background: #fff;
  border-radius: 4px;
  margin-bottom: 5px;
  animation: loading 1.5s linear infinite;
}
.block:nth-child(3){
  margin-bottom: 0
}
.item{
  display: inline-block;
  margin-left: 5px;
}
.block:nth-child(1){
  animation-delay: 0.25s
}
.block:nth-child(2){
  animation-delay: 0.5s
}
.block:nth-child(3){
  animation-delay: 0.75s
}
.show:nth-child(2){
  padding-top:80rpx;
}
@keyframes loading{
  0%,100%{transform: translate(0,0) rotate(0deg)}
  16%,33%{transform: translate(-40rpx,0) rotate(-90deg)}
  66%,83%{transform: translate(40rpx,0) rotate(90deg)}
}
.block_1{
    width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  margin-left: 10rpx;
}
@keyframes loading1{
  0%,50%{transform: translateY(0)}
  20%{transform: translateY(-100%)}
   750%{transform: translateY(100%)}
}
.block_1:nth-child(2n){
  animation: loading1 1s ease-in-out infinite
}
.block_1:nth-child(2n-1){
  animation: loading2 1s ease-in-out infinite
}
@keyframes loading2{
  0%,50%{transform: translateY(0)}
  25%{transform: translateY(100%)}
  75%{transform: translateY(-100%)}
}
.block_2{
    width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  margin-left: 20rpx;
  animation: loading3 1.2s ease-in infinite
}
.block_2:nth-child(1){
  animation-delay: 0.4s
}
.block_2:nth-child(2){
  animation-delay: 0.8s
}
.block_2:nth-child(3){
  animation-delay: 1.2s
}
@keyframes loading3{
  0%{transform: translate(0)}
  30%{transform: translateX(50rpx) rotate(90deg)}
  65%{transform: translateY(250rpx) rotate(180deg)}
  100%{transform: translateY(500rpx) rotate(270deg)}
}